{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-has-content": "error",
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/click-events-have-key-events": "warn",
    "jsx-a11y/heading-has-content": "warn",
    "jsx-a11y/html-has-lang": "error",
    "jsx-a11y/img-redundant-alt": "error",
    "jsx-a11y/no-access-key": "error",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "error",
    "@next/next/no-img-element": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "warn",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "JSXAttribute[name.name='className'][value.type='Literal'][value.value=/\\b(?:w|h|max-w|min-w|max-h|min-h)-\\[\\d+(?:px)?\\]/]",
        "message": "Avoid fixed pixel dimensions in Tailwind arbitrary values. Use responsive utilities or fluid sizing."
      },
      {
        "selector": "JSXAttribute[name.name='className'][value.type='Literal'][value.value=/\\boverflow-x-hidden\\b/]",
        "message": "Do not hide horizontal overflow globally; prefer fixing layout overflow at the source."
      },
      {
        "selector": "JSXAttribute[name.name='style'] > JSXExpressionContainer > ObjectExpression > Property[key.name=/^(width|height|maxWidth|maxHeight|minWidth|minHeight)$/][value.type=/^(Literal|TemplateLiteral)$/]",
        "message": "Avoid inline fixed dimensions. Use responsive CSS/Tailwind classes or container queries."
      }
    ]
  }
}
